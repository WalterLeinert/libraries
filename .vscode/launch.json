{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "-u",
        "tdd",
        "--timeout",
        "999999",
        "--colors",
        "${workspaceRoot}/server/dist/test/**/*.js"
      ],
      "internalConsoleOptions": "openOnSessionStart",
       "cwd": "${workspaceRoot}/server",
       "sourceMaps": true,
       "env": {
        "NODE_ENV": "testing"
      },
       "outFiles": [
        "${workspaceRoot}/server/dist/node/src/**/*.js",
        "${workspaceRoot}/server/dist/node/test/**/*.js",
        "${workspaceRoot}/server/node_modules/@fluxgate/common/dist/node/src/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "common: run Mocha",
      "program": "${workspaceRoot}/common/node_modules/mocha/bin/_mocha",
      "args": [
        "common/dist/node/test/**/*.spec.js",
        "--no-timeouts"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null,
      "outFiles": [
        "${workspaceRoot}/common/dist/node/src/**/*.js",
         "${workspaceRoot}/common/dist/node/test/**/*.js"
      ],
      "sourceMaps": true,
      "stopOnEntry": false,
      "env": {
        "NODE_ENV": "testing"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "server: run Mocha",
      "program": "${workspaceRoot}/server/node_modules/mocha/bin/_mocha",
      "args": [
        "${workspaceRoot}/server/dist/test/**/*.js",
        "--no-timeouts"
      ],
      "cwd": "${workspaceRoot}/server",
      "runtimeExecutable": null,
       "outFiles": [
        "${workspaceRoot}/server/dist/src/**/*.js",
        "${workspaceRoot}/server/dist/test/**/*.js",
        "${workspaceRoot}/server/node_modules/@fluxgate/common/dist/node/src/**/*.js"
      ],
      "sourceMaps": true,
      "stopOnEntry": false,
      "env": {
        "NODE_ENV": "testing"
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "An den Prozess anf√ºgen",
      "port": 3000,
      "outFiles": [],
      "sourceMaps": true
    }
  ]
}