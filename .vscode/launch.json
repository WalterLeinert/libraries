  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Programm starten",
      "program": "${workspaceRoot}\\dist\\bundle.js",
      "cwd": "${workspaceRoot}",
      "outFiles": [],
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "common: run Mocha",
      "program": "${workspaceRoot}/common/node_modules/mocha/bin/_mocha",
      "args": [
        "common/dist/node/test/**/*.spec.js",
        "--no-timeouts"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null,
      "outFiles": [
        "${workspaceRoot}/common/dist/node/src/**/*.js",
        "${workspaceRoot}/build/**/*.js"
      ],
      "sourceMaps": true,
      "stopOnEntry": false,
      "env": {
        "NODE_ENV": "testing"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "server: run Mocha",
      "program": "${workspaceRoot}/server/node_modules/mocha/bin/_mocha",
      "args": [
        "dist/test/**/*.spec.js",
        "--no-timeouts"
      ],
      "cwd": "${workspaceRoot}/server",
      "runtimeExecutable": null,
      "outFiles": [
        "${workspaceRoot}/server/dist/src/**/*.js"
      ],
      "sourceMaps": true,
      "stopOnEntry": false,
      "env": {
        "NODE_ENV": "testing"
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "An den Prozess anf√ºgen",
      "port": 3000,
      "outFiles": [],
      "sourceMaps": true
    }
  ]
}