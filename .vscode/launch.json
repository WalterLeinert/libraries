{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "client: Launch Chrome",
      "url": "http://localhost:9876/#",
      "webRoot": "${workspaceRoot}"
    },
        {
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "name": "core: run Mocha",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "--inspect",
        "dist/test/**/*.spec.js",
        "--no-timeouts"
      ],
      "cwd": "${workspaceRoot}/packages/core",
      "runtimeExecutable": null,
      "outFiles": [
      ],
      "sourceMaps": true,
      "stopOnEntry": false,
      "env": {
        "NODE_ENV": "debug"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "common: run Mocha",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "dist/test/**/*.spec.js",
        "--no-timeouts",
        "-r", "ts-node/register",
        "-r", "tsconfig-paths/register"
      ],
      "cwd": "${workspaceRoot}/packages/common",
      "runtimeExecutable": null,
      "outFiles": [
      ],
      "sourceMaps": true,
      "stopOnEntry": false,
      "env": {
        "NODE_ENV": "debug"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "platform: run Mocha",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "dist/node/src/test/**/*.spec.js",
        "--no-timeouts",
        "-r", "ts-node/register",
        "-r", "tsconfig-paths/register"
      ],
      "cwd": "${workspaceRoot}/packages/platform",
      "runtimeExecutable": null,
      "outFiles": [
      ],
      "sourceMaps": true,
      "stopOnEntry": false,
      "env": {
        "NODE_ENV": "debug"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "name": "server: run Mocha",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "dist/test/**/*.js",
        "--no-timeouts"
      ],
      "cwd": "${workspaceRoot}/server",
      "runtimeExecutable": null,
       "outFiles": [
      ],
      "sourceMaps": true,
      "stopOnEntry": false,
      "env": {
        "NODE_ENV": "debug"
      }
    }
  ]
}