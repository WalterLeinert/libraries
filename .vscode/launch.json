    "version": "0.2.0",
    "configurations": [{
            "type": "node",
            "request": "launch",
            "name": "Programm starten",
            "program": "${workspaceRoot}\\build\\test\\main.js",
            "cwd": "${workspaceRoot}",
            "outFiles": [
                "${workspaceRoot}\\build\\test\\**\\*.js"
            ],
            "sourceMaps": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Mocha",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "dist/test/**/*.spec.js", "--no-timeouts"
            ],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "outFiles": [
                "${workspaceRoot}/dist/**/*.js"
            ],
            "sourceMaps": true,
            "stopOnEntry": false,
            "env": {
                "NODE_ENV": "testing"
            }
        },
        {
            "type": "node",
            "request": "attach",
            "name": "An den Prozess anf√ºgen",
            "port": 5858,
            "outFiles": [],
            "sourceMaps": true
        }
    ]
}