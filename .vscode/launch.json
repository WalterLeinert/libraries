{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach node process",
      "port": 9229
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "client: Launch Chrome",
      "url": "http://localhost:9876/#",
      "webRoot": "${workspaceRoot}"
    },
        {
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "name": "core: run Mocha",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "--inspect",
        "dist/test/**/*.spec.js",
        "--no-timeouts"
      ],
      "cwd": "${workspaceRoot}/packages/core",
      "runtimeExecutable": null,
      "outFiles": [
      ],
      "sourceMaps": true,
      "stopOnEntry": false,
      "env": {
        "NODE_ENV": "debug"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "common: run Mocha",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "dist/test/**/*.spec.js",
        "--no-timeouts",
        "-r", "ts-node/register",
        "-r", "tsconfig-paths/register"
      ],
      "cwd": "${workspaceRoot}/packages/common",
      "runtimeExecutable": null,
      "outFiles": [
      ],
      "sourceMaps": true,
      "stopOnEntry": false,
      "env": {
        "NODE_ENV": "debug"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "node: run Mocha",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "dist/test/**/*.spec.js",
        "--no-timeouts",
        "-r", "ts-node/register",
        "-r", "tsconfig-paths/register"
      ],
      "cwd": "${workspaceRoot}/packages/node",
      "runtimeExecutable": null,
      "outFiles": [
      ],
      "sourceMaps": true,
      "stopOnEntry": false,
      "env": {
        "NODE_ENV": "debug"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "platform: run Mocha",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "dist/node/src/test/**/*.spec.js",
        "--no-timeouts",
        "-r", "ts-node/register",
        "-r", "tsconfig-paths/register"
      ],
      "cwd": "${workspaceRoot}/packages/platform",
      "runtimeExecutable": null,
      "outFiles": [
      ],
      "sourceMaps": true,
      "stopOnEntry": false,
      "env": {
        "NODE_ENV": "debug"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "protocol": "inspector",
      "name": "server: run Mocha",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "dist/test/**/*.js",
        "--no-timeouts",
        "-r", "ts-node/register",
        "-r", "tsconfig-paths/register"
      ],
      "cwd": "${workspaceRoot}/packages/server",
      "runtimeExecutable": null,
       "outFiles": [
      ],
      "sourceMaps": true,
      "stopOnEntry": false,
      "env": {
        "NODE_ENV": "local"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "components: ng build",
      "program": "${workspaceRoot}/node_modules/@angular/cli/bin/ng",
      "args": [
        "build",
        "components"
      ],
      "cwd": "${workspaceRoot}",
      "runtimeExecutable": null,
      "outFiles": [
      ],
      "sourceMaps": true,
      "stopOnEntry": false,
      "env": {
        "NODE_ENV": "debug"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "client: ng build",
      "program": "${workspaceRoot}/node_modules/@angular/cli/bin/ng",
      "args": [
        "build",
        "client"
      ],
      "runtimeExecutable": null,
      "outFiles": [
      ],
      "sourceMaps": true,
      "stopOnEntry": false
    },
    {
      "type": "node",
      "request": "launch",
      "name": "starter-server: debug",
      "program": "${workspaceRoot}/dist/starter-server/src/lib/server.js",
      "args": [
        "-r", "tsconfig-paths/register"
      ],
      "cwd": "${workspaceRoot}/dist/starter-server/src/lib/",
      "runtimeExecutable": null,
       "outFiles": [
      ],
      "sourceMaps": true,
      "stopOnEntry": false,
      "env": {
        "NODE_ENV": "local"
      }
    },
  ]
}