{
  "compilerOptions": {
    "strict": false,
    "baseUrl": "test/",
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dts/",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "suppressImplicitAnyIndexErrors": false,
    "importHelpers": true,
    "lib": [
      "es6",
      "dom"
    ],
    "outDir": "dist/",
    "types": [
      "node"
    ]
  },
  "exclude": [
    "node_modules",
    "dts"
  ]
}