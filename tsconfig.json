{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "sourceMap": true,
    "declaration":false,
    "experimentalDecorators":true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "suppressImplicitAnyIndexErrors": false,
    "lib": ["es6", "dom"],
    "outDir": "build/",
    "types":[
      "node"
    ],
    "noUnusedLocals": true,
    "noUnusedParameters": false
  },
  
  "exclude": [
    "node_modules",
    "dts"
  ]
}